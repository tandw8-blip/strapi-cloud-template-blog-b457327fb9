{
  "kind": "collectionType",
  "collectionName": "locations",
  "info": {
    "singularName": "location",
    "pluralName": "locations",
    "displayName": "Location"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false
    },
    "description": {
      "type": "richtext"
    },
    "shops": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::shop.shop",
      "mappedBy": "location"
    }
  }
}
