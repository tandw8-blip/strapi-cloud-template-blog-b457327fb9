{
  "kind": "collectionType",
  "collectionName": "shop_tags",
  "info": {
    "singularName": "shop-tag",
    "pluralName": "shop-tags",
    "displayName": "Shop Tag",
    "description": "Halal / Vegetarian / Family-friendly / Wheelchair"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "icon": {
      "type": "media",
      "multiple": false
    },
    "applicableTo": {
      "type": "enumeration",
      "enum": ["restaurant", "shop", "all"],
      "default": "restaurant",
      "required": true
    },
    "shops": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop.shop",
      "mappedBy": "features"
    }
  }
}
