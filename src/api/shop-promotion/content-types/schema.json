{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "thumbnail": {
      "type": "media",
      "multiple": false
    },
    "description": {
      "type": "richtext"
    },
    "ctaText": {
      "type": "string"
    },
    "ctaLink": {
      "type": "string"
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "locations": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::location.location"
    },
    "items": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop.shop",
      "inversedBy": "promotions"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    }
  }
}
