{
  "kind": "collectionType",
  "collectionName": "shop-categories",
  "info": {
    "singularName": "shop-category",
    "pluralName": "shop-categories",
    "displayName": "Shop Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["shop", "restaurant", "all"],
      "default": "all",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "icon": {
      "type": "media",
      "multiple": false
    },
    "sortOrder": {
      "type": "integer"
    },
    "shops": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop.shop",
      "mappedBy": "categories"
    }
  }
}
