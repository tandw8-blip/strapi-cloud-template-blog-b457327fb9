{
  "kind": "collectionType",
  "collectionName": "shop_categories",
  "info": {
    "singularName": "shop-category",
    "pluralName": "shop-categories",
    "displayName": "Shop Category"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },

    "sortOrder": { "type": "integer" },

    "shops": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop.shop",
      "mappedBy": "categories"
    }
  }
}
