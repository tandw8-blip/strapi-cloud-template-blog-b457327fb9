{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "Shop"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": { "type": "string", "required": true },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },

    "bannerImage": { "type": "media", "multiple": false },
    "logo": { "type": "media", "multiple": false },

    "location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location",
      "inversedBy": "shops"
    },

    "unitNo": { "type": "string" },
    "floor": { "type": "string" },

    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop-category.shop-category",
      "inversedBy": "shops"
    },

    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "shared.tag"
    },

    "description": { "type": "richtext" },

    "mapMarker": {
      "type": "component",
      "repeatable": false,
      "component": "shared.map-marker"
    },

    "related": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop.shop"
    },

    "isFeatured": { "type": "boolean", "default": false },
    "sortOrder": { "type": "integer" }
  }
}
