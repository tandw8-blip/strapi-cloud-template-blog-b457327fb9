{
  "kind": "collectionType",
  "collectionName": "shops",
  "info": {
    "singularName": "shop",
    "pluralName": "shops",
    "displayName": "Shop",
    "description": "Represents Shop or Restaurant item"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["shop", "restaurant"],
      "default": "shop",
      "required": true
    },
    "bannerImage": {
      "type": "media",
      "multiple": false,
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false
    },
    "location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::location.location",
      "inversedBy": "shops"
    },
    "unitNo": {
      "type": "string"
    },
    "floor": {
      "type": "string"
    },
    "locationDescription": {
      "type": "string"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop-category.shop-category",
      "inversedBy": "shops"
    },
    "tags": {
      "type": "component",
      "repeatable": true,
      "component": "shared.tag"
    },
    "features": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop-tag.shop-tag",
      "inversedBy": "shops"
    },
    "description": {
      "type": "richtext"
    },
    "ctaText": {
      "type": "string"
    },
    "ctaLink": {
      "type": "string"
    },
    "mapMarker": {
      "type": "component",
      "repeatable": false,
      "component": "shared.map-marker"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "sortOrder": {
      "type": "integer"
    },
    "promotions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop-promotion.shop-promotion",
      "mappedBy": "items"
    },
    "related": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::shop.shop"
    }
  }
}
